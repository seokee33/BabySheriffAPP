<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Baby_crying"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#0F979797">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="아이가 울고 있어요!"
            android:textColor="@color/black"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로 지금 아이가 불편한 것 같습니다!"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어서가서 확인해 주세요!"
            android:textColor="@color/black"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btn_cryAnalysis"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#BDDA9B"
            android:text="울음 분석 결과 확인하기" />

        <Button
            android:id="@+id/btn_cryClose"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#BDDA9B"
            android:text="닫기"/>

    </LinearLayout>

</LinearLayout>